  font-size: 34rpx;
}
.next{
  display: inline-block;
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 32rpx;
  color: #fff;
  background-color: #000;
  font-size: 34rpx;
  margin-left: 76rpx;
}
.tips{
  margin: 200rpx auto;
  width: 610rpx;
  font-weight: bold;
  line-height: 50rpx;
  color: rgb(150, 150, 150);
