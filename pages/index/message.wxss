.icon::before{
  font-size: 70rpx
}
.floatR{
  float: right;
}
.fixed{
  border-top: 1px solid #dedede;
  background-color: #f5f5f7;
  position: fixed;
  bottom: 80rpx;
  display: flex;
  align-items: center;
  justify-content: space-around
}

.input{
  /* margin-left: 50rpx; */
  border: 2rpx solid #e8e8ea;
  background-color: #fff;
  border-radius: 10rpx
}
.else{
  width: 48rpx;
  height: 48rpx;
}
.send_btn{
  background-color: #007aff;
  color: #fff;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  text-align: center
}
.choosePic{
  height: 48rpx;
  width: 60rpx
}
.select{
  position: fixed;
  bottom: 0;
  height: 80rpx;
  width: 100%;
  background-color: #000;
  color: #fff;
}
.select view{
  display: inline-flex;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  align-items: center;
  justify-content: center
}
.chooseYes{
  width: 50%;
  border-right: 1px solid #fff;
  font-size: 26rpx  ;
  box-sizing: border-box
}
.chooseNo{
  width: 50%;
  font-size: 26rpx  
}
.chooseYes image{
  width: 42rpx;
  height: 46rpx
}
.chooseNo image{
  width: 60rpx;
  height: 48rpx
}