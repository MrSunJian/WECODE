/* message.wxss */
.srollView{
  height:1050rpx;
  background:#ebebeb;
  /* margin-bottom:60rpx */
}
.infoTip{
  position: absolute;
  top: 0;
  width: 100%;
  text-align: center
}
.tipMessage{
  padding: 6rpx 10rpx;
  background-color: #DADADA;
  color: #fff;
}
.padding{
  padding:20rpx;
}
.padding-half{
  padding:10rpx;
}
.clearfix{
  overflow: hidden;
}
.padding_half{
  padding: 9rpx 18rpx;
}
.right-Avatar{
    float:right;
    width: 80rpx;
    height: 80rpx;
}
.right-Triangle{
    float:right;
    margin-top: 30rpx;
    width: 0;
    height: 0;
    border-top: 4px solid transparent;
    border-left: 8px solid yellowgreen;
    border-bottom: 6px solid transparent;
}
.right-message{
    float: right;
    /* margin-top: 10rpx; */
    padding: 10rpx 16rpx 4rpx 16rpx;
    line-height: 46rpx;
    background: yellowgreen;
    border-radius: 10rpx;
    font-size: 12px;
    max-width: 460rpx;
    min-height: 54rpx;
}

.left-Avatar{
    float:left;
    width: 80rpx;
    height: 80rpx;
}
.left-Triangle{
    float:left;
    margin-top: 36rpx;
    width: 0;
    height: 0;
    border-top: 4px solid transparent;
    border-right: 8px solid #fff;
    border-bottom: 6px solid transparent;
}
.left-message{
    float: left;
    margin-top: 10rpx;
    padding: 10rpx 16rpx 4rpx 16rpx;
    line-height: 46rpx;
    background: #fff;
    border-radius: 10rpx;
    font-size: 12px;
    max-width: 460rpx;
    min-height: 54rpx;
}
