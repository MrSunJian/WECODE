  flex-direction: row;
  align-items: center;
}
.area2-swiper-item.on{
  color: #F34416;
}
.area2-swiper-areaname{
  position: relative;
  padding-right: 45px;
}
.area2-swiper-areaname::after{
  content: '';
  position: absolute;
  width: 20px;
  height: 20px;
  right: 0px;
  top:50%;
  margin-top: -10px;
  line-height: normal;
  display: none;
  background-position: center center;
  background-size: 10px auto;
  background-repeat: no-repeat;
  background-image: url(../../pic/cha.png);
}
.on .area2-swiper-areaname::after{
  display: block;
}